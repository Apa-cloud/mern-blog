{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "import"
    ],
    "settings": {
      "react": {
        "version": "detect"  // Automatically detect the react version
      }
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": ["warn"],
      "react/react-in-jsx-scope": "off",  // Turn off the rule for React in scope for React 17+
      "react/jsx-no-target-blank": ["error", { "allowReferrer": true }]
    }
  }
  